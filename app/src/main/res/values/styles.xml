<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadLine">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/event_info_event_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/top_margin</item>
    </style>

    <style name="clickableButton">
        <item name="android:textColor">@color/selector_txt</item>
        <item name="android:background">@color/fui_transparent</item>
    </style>

    <style name="details">
        <item name="android:color">@color/details</item>
    </style>

    <style name="PopUpTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- Remove the action bar from the popup window -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyToggleButton" parent="@android:style/Widget.Material.Light.Button.Toggle">
        <item name="android:textColorPrimary">#d84315</item>
        <item name="colorAccent">#0288d1</item>
        <item name="android:colorControlNormal">#f9a825</item>
        <item name="android:colorControlHighlight">#880e4f</item>
        <item name="android:colorButtonNormal">#b9f6ca</item>
        <item name="android:textColor">#880e4f</item>
        <item name="android:color">#d84315</item>
        <item name="android:textSize">10sp</item>



    </style>



</resources>