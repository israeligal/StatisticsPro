<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rami.statistics_pro.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimaryText"
    android:textDirection="rtl"



    >

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryText"
        app:tabBackground="@color/colorPrimaryText"
        app:tabIndicatorColor="@color/numberStatisticsBackground"
        app:tabSelectedTextColor="@color/tabSelectedColor"
        app:tabTextColor="@color/tabsTextColor"
        android:layoutDirection="rtl"


       />
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:src="@drawable/headline_pais_statistics"
        app:srcCompat="@drawable/headline_pais_statistics"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/tabsColor"
        android:layoutDirection="rtl"

        >

    </android.support.v4.view.ViewPager>

</LinearLayout>
